# CodingSoft Open WebUI - Production Environment Variables
# Copy this file to .env and configure

# ============================================
# üîê SEcrets (REQUIRED - CHANGE THESE!)
# ============================================
WEBUI_SECRET_KEY=your-super-secret-key-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars

# ============================================
# üåê Dominio y SSL
# ============================================
DOMAIN=localhost
# LETSENCRYPT_EMAIL=admin@example.com

# ============================================
# ü§ñ Ollama Configuration
# ============================================
ENABLE_OLLAMA=true
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_VERSION=latest
OLLAMA_NUM_PARALLEL=2

# ============================================
# ü§ñ OpenAI Configuration (Optional)
# ============================================
# OPENAI_API_KEY=sk-your-openai-key
# OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================
# üì¶ Modelos
# ============================================
DEFAULT_MODELS=llama3.2:latest

# ============================================
# üîß Feature Flags
# ============================================
ENABLE_RAG=true
ENABLE_FUNCTION_CALLING=true
ENABLE_WEB_SEARCH=false
ENABLE_AUDIO_TTS=true
ENABLE_AUDIO_STT=true
ENABLE_IMAGE_GENERATION=true

# ============================================
# üìä l√≠mites
# ============================================
RAG_LIMIT_PDF_PAGES=10
RAG_FILE_MAX_SIZE_MB=20
WEBUI_SESSION_EXP_TIME=1440
DEFAULT_USER_ROLE=admin

# ============================================
# üìà Telemetry
# ============================================
ENABLE_TELEMETRY=true

# ============================================
# üåê CORS
# ============================================
CORS_ALLOW_ORIGIN=*

# ============================================
# üì¶ Versiones de servicios
# ============================================
REDIS_VERSION=alpine
NGINX_VERSION=alpine
OLLAMA_VERSION=latest
TRAEFIK_VERSION=v3.0

# ============================================
# üîß Compose
# ============================================
COMPOSE_VERSION=1.29.0
